# AWS Configuration
aws_region = "us-east-1"
environment = "dev"
project_name = "ai-debates"

# Custom Domain (optional - leave empty if using AWS default URL)
domain_name = ""
route53_zone_id = ""

# App Runner Configuration
app_runner_cpu = "0.25 vCPU"
app_runner_memory = "0.5 GB"
app_runner_max_concurrency = 100
app_runner_min_instances = 0
app_runner_max_instances = 2

